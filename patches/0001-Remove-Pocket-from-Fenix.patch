-    val capsJSON = spocJson.getJSONObject(JSON_SPOC_CAPS_KEY)
-
-    if (cap == JSON_SPOC_CAPS_LIFETIME_KEY) {
-        capsJSON.remove(cap)
-    } else {
-        capsJSON.getJSONObject(JSON_SPOC_CAPS_FLIGHT_KEY).remove(cap)
-    }
-
-    return obj.toString()
-}
